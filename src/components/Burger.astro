<div id='right-menu' class='right-menu hidden xl:block'>
  <div id='menuToggle' class='cursor-pointer p-4'>
    <span></span>
    <span></span>
    <span class='last-burger-span'></span>
  </div>
</div>

<script>
  function initDesctopMenu() {
    function handleMouseover() {
      const dropdown_id = "dropdowm-menu_123";
      const id = "header_123";
      const burger = document.getElementById("menu-button_123");
      const header = document.getElementById(id);
      const dropdown = document.getElementById(dropdown_id);
      header.style.backgroundColor = "white";
      dropdown.style.display = "block";
      burger.style.backgroundColor = "darkgrey";
    }

    function handleDropdownMouseover() {
      const id = "header_123";
      const header = document.getElementById(id);
      const dropdown_id = "dropdowm-menu_123";
      const dropdown = document.getElementById(dropdown_id);
      const burger = document.getElementById("menu-button_123");

      dropdown.style.display = "none";
      header.style.backgroundColor = "transparent";
      burger.style.backgroundColor = "white";
    }

    const dropdown_id = "dropdowm-menu_123";
    const dropdown = document.getElementById(dropdown_id);
    const menu = document.getElementById("right-menu");
    menu.addEventListener("mouseover", handleMouseover);
    menu.addEventListener("click", handleMouseover);
    dropdown.addEventListener("mouseleave", handleDropdownMouseover);
  }
  window.onload = initDesctopMenu;
</script>

<style>
  #menuToggle {
    display: block;
    z-index: 1;
    -webkit-user-select: none;
    user-select: none;
  }

  #menuToggle span {
    display: block;
    width: 33px;
    height: 4px;
    margin-bottom: 5px;
    position: relative;
    background: #0a0000;
    border-radius: 3px;
    z-index: 1;
    transform-origin: 4px 0px;
  }
  #menuToggle span:last-child {
    margin-bottom: 0;
  }
</style>
