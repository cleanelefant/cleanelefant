<div class='right-menu block lg:hidden rounded-full'>
  <div id='mobileMenuToggle' class='menuToggle cursor-pointer'>
    <span></span>
    <span class='middle'></span>
    <span class='last-burger-span'></span>
  </div>
</div>

<style>
  .menuToggle {
    display: block;
    z-index: 1;
    -webkit-user-select: none;
    user-select: none;
  }

  .menuToggle span {
    display: block;
    width: 33px;
    height: 4px;
    margin-bottom: 4px;
    position: relative;
    background: #0a0000;
    border-radius: 3px;
    z-index: 1;
    transform-origin: 4px 0px;
  }
  .menuToggle span:last-child {
    margin-bottom: 0;
  }
  .menuToggle.active span:first-child {
    transform: rotate(45deg) translate(-4px, -2px);
  }
  .menuToggle.active .middle {
    display: none;
  }
  .menuToggle.active span:last-child {
    transform: rotate(-45deg) translate(-4px, -2px);
  }
</style>

<script>
  function initMobileBurger() {
    const burger = document.getElementById("mobileMenuToggle");

    burger.addEventListener("click", () => {
      const menu = document.getElementById("mobile_menu_123");
      const header = document.getElementById("header_123");
      const main = document.getElementById("main");

      main.addEventListener("click", () => {
        if (menu.style.display === "block") {
          menu.style.display = "none";
        }
      });
      if (menu.style.display === "block") {
        menu.style.display = "none";
        header.classList.remove("bg-white");
        burger.classList.remove("active");
      } else {
        menu.style.display = "block";
        header.classList.add("bg-white");
        burger.classList.add("active");
      }
    });
  }
  initMobileBurger();
</script>
